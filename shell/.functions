# Util commands
function mkd() {
   mkdir -p "$@" && cd "$@"
}

archive () {
   zip -r "$1".zip -i "$1" ;
}

function silent() {
   "$@" >& /dev/null
}

function weather() {
   local city="${1:-Crawley}"
   curl http://wttr.in/${city// /+}\?F
}

# Docker functions
function ssh-docker() {
   docker exec -it "$@" bash
}


# Git commands
function commit() {
  commitMessage="$*"

  if [ "$commitMessage" = "" ]; then
     commitMessage="wip"
  fi

  git add .
  eval "git commit -am '${commitMessage}'"
}

function rbmain() {
  eval "git checkout main"
  eval "git pull"
  eval "git checkout -"
  eval "git rebase main"
}

function rbmaster() {
  eval "git checkout master"
  eval "git pull"
  eval "git checkout -"
  eval "git rebase master"
}